  <div class='login'>
      <div class='col-md-4 offset-md-4'>
        <div class="card">
          <div class="card-header text-center">
          ログイン
          </div>
          <div class="card-body">
          
            <p class='text-center'>登録がまだの人は早速登録しよう！！</p>
            
            <div class='new-button'>
              <%= link_to '新規登録へ',new_user_path,class:'new-btn'%>
            </div>
            <hr>
            
            <%= form_for(:session, url: login_path) do |f|%>
            
             <div class="form-group">
              <%= f.label :email, 'Email' %>
              <%= f.email_field :email,  class: 'form-control',placeholder: "メールアドレス" %>
            </div>
            
             <div class="form-group">
              <%= f.label :password, 'パスワード' %>
              <%= f.password_field :password,  class: 'form-control', placeholder: "パスワード" %>
            </div>
            
            <div class="text-center">
              <%= f.submit 'ログインへ',class: 'login-btn' %>
            </div>
            <% end %>
          </div>
        </div>
    </div>
</div>