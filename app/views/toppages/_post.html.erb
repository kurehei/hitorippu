<div class='row'>
  <% posts.each do |posting| %>
      <div class="item">
        <div class="col-md-4 col-sm-4 col-xs-4">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <p class="item-title"><%= link_to posting.name,posting %></p>
            </div>
            <div class="panel-body">
              <% if posting.image? %>
              　<%= image_tag posting.image.thumb.url,:size =>'240x200' %>
              　<% else %>
              　<%= image_tag 'noimage.gif' %>
            　<% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>