<ul class="media-list">
    <% followers.each do |follower| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(follower, { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= follower.name %>
          </div>
          <div>
            <%= render 'follow_form'%>
          </div>
        </div>
      </li>
    <% end %>
  </ul>