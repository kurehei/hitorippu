<div class='user-new'>
  <div class='col-xs-12 col-md-4 col-md-offset-4'>
    <div class="panel panel-default ">
      <div class="panel-heading text-center">
      新規登録
      </div>
      <div class="panel-body">
        
        <%= form_for(@user) do |f|%>
        
        <div class="form-group" >
          <%= f.label :name, '名前' %>
          <%= f.text_field :name,  class: 'form-control',placeholder: "名前" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, 'Email' %>
          <%= f.email_field :email,  class: 'form-control',placeholder: "メールアドレス" %>
        </div>
        
        <div class="form-group">
          <%= f.label :password, 'パスワード' %>
          <%= f.password_field :password,  class: 'form-control', placeholder: "６文字以上" %>
        </div>
        
        <div class="form-group">
          <%= f.label :password_confirmation, 'パスワード（確認）' %>
          <%= f.password_field :password_confirmation, class: 'form-control',placeholder: "もう一回" %>
        </div>
        
        <div class='form-group'>
          <i class="fa fa-file-photo-o"></i>
          <%= f.label :image, '顔写真'%>
          <%= f.file_field :image%>
        </div>
        
        <div class="form-group" >
          <%= f.label :introduction, '一言' %>
          <%= f.text_area :introduction,  class: 'form-control',placeholder: "あなたについて一言",rows: 3 %>
        </div>
        <div class="text-center">
          <%= f.submit '登録する',class: 'btn btn-primary btn-lg' %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>