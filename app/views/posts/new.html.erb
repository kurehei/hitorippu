<% if logged_in?%>
  <div class="post-new">
    <div class='col-xs-12 col-md-4 offset-md-4'>
    <div class="card">
      <div class="card-header text-center">
        一人旅の思い出を投稿
      </div>
      <div class="card-body">
        <%= form_for(@post) do |f|%>
        
        <div class="form-group">
          <%= f.label :name,'タイトル'%>
          <%= f.text_field :name, class: 'form-control',placeholder: '一言で表すと？'%>
        </div>
        
        <div class='form-group'>
          <i class="fa fa-file-photo-o"></i>
          <%= f.label :image, '写真'%>
          <%= f.file_field :image%>
        </div>
        
        <div class="form-group">
          <%= f.label :content,'詳細' %>
          <%= f.text_area :content, class: 'form-control', rows: 6,placeholder: 'どんなところ？'%>
        </div>
        <div class='text-center'>
          <%= f.submit '投稿する', class: 'btn btn-primary btn-lg '%>
        </div>
        <% end %>
      </div>
    </div>
    </div>
  </div>
<% end%>