<div class="items">
   <div class="col-md-offset-1 col-md-5 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-heading text-center">
              <p class="itemt-title"><%= @post.name%></p>
              <p class="item-user-name">
                 　<% if  @post.user.image? %>
                      <%= image_tag  @post.user.image.thumb.url  ,class:"img-circle",:size =>'30x30'%>
                    <% else %>
                       <%= image_tag avatar_url( @post.user) ,class:"img-circle",:size =>'30x30'%>
                    <% end %>
                   <%= link_to @post.user.name,user_path(@user)%>
              </p>
              <% if @post.user == current_user%>
                 <div class="fa fa-trash fa-2x"></div>
              <% end %>
              
            </div>
            <div class="panel-body">
               <% if @post.image? %>
              　<%= image_tag @post.image.thumb.url ,:size =>'570x380'%>
              　<% else %>
              　<%= image_tag 'noimage.gif' %>
            　<% end %>
              
            </div>
            <div class="panel-footer">
              <% if Like.find_by(user_id: current_user.id, post_id: @post.id) %>
                    <%= link_to("/likes/#{@post.id}/destroy", {method: "post"}) do %>
                    <span class="fa fa-heart fa-2x  like-btn-unlike"></span>
                <% end %>
              <% else %>
                  <%= link_to("/likes/#{@post.id}/create", {method: "post"}) do %>
                     <span class="fa fa-heart fa-2x like-btn"></span>
                  <% end %>
              <% end %>
         　　<%=@likes_count %>
         　<p class="pv-count">PV<%=  @post.impressionist_count %></p>
             <p><%= @post.content%></p>
            </div>
          </div>
         </div> 
      </div>
      
    <aside class='col-xs-12 comments'> 
      <ul class="media-list">
          <li class="media">
              <div class="media-left">
                  　<% if  @post.user.image? %>
                      <%= image_tag  @post.user.image.thumb.url  ,class:"img-circle",:size =>'50x50'%>
                    <% else %>
                       <%= image_tag avatar_url( @post.user) ,class:"img-circle",:size =>'50x50'%>
                    <% end %>
              </div>
              <div class='media-body'>
                 <div>
                 <%= link_to @post.user.name,user_path(@user)%>
                 </div>
                 <div class='comment'>
                          <%= form_for [@post, @comment] do |f| %>
                          <%= f.text_field :content ,class: 'comment-text'%>
                          <%= f.hidden_field :user_id, :value => current_user.id %>
                          <%= f.hidden_field :post_id, :value => @post.id %>
                          <%= button_tag(class: 'comment-submit')do %>
                            <%= content_tag :span, "コメント",class:"fa fa-comments"%>
                          <% end %>
                    <% end %>
                 </div>
              </div>
          </li>
      </ul>
        
      <ul class="media-list">
       <% @comments.each do |c| %> 
        <li class='media'>
              
            <div class='media-left'>
               　<% if  @post.user.image? %>
                  <%= image_tag  @post.user.image.thumb.url  ,class:"img-circle",:size =>'60x60'%>
                 <% else %>
                 <%= image_tag avatar_url( @post.user) ,class:"img-circle",:size =>'60x60'%>
                    <% end %>
                <!--コメント-->
            </div>
               <div class='media-body'>
                 <div>
                  <%= link_to @post.user.name,user_path(@user)%>
                 </div> 
                 <div> 
                  <%= c.content %>
                 </div>
                  <hr>
               </div>
        </li>
        <% end %>
      </ul> 
    </aside>
</div>

