<div class='post-index'>
  <% @posts.each do |posted| %>
        <div class="all-post">
          <div class="col-md-4">
            <div class="panel panel-default">
              <div class="panel-heading text-center">
                <p class="item-title"><%= link_to posted.name,posted %></p>
                <p class='item-titles'>
                  <% if posted.user.image? %>
                    <%= image_tag posted.user.image.thumb.url  ,class:"img-circle",:size =>'20x20'%>
                  <% else %>
                     <%= image_tag avatar_url(posted.user) ,class:"img-circle",:size =>'20x20'%>
                  <% end %>
                  <%=link_to posted.user.name, user_path(posted.user)%>
                  </p>
              </div>
              <div class="panel-body">
                <% if posted.image? %>
                　<%= image_tag posted.image.thumb.url %>
                　<% else %>
                　<%= image_tag 'noimage.gif' %>
              　<% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
</div>